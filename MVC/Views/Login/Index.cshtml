@{
    ViewData["Title"] = "Inloggen";
}
<div class="container"> 
    <div class="col-lg-6 Loginblock">

    <h2>@ViewData["Title"]</h2>
    <!-- <h3>@ViewData["Message"]</h3> -->



    <form>
        <li class="LoginPageListStyle"><input class="LoginPageInput" name="username" type="text" placeholder="Username"></li>
        <li class="LoginPageListStyle"><input class="LoginPageInput" name="password" type="text" placeholder="Password"></li>
        <li class="LoginPageListStyle"><button class="InlogPageButton">Inloggen</button></li>
    </form>
    
    </div>
     <div class="col-lg-6 Registerblock"> 
         <h2>Nieuwe klant</h2>
         <p>Redenen om een account aan te maken:</p>
      <li>Je winkelmandje altijd en overal opgeslagen</li>
      <li>Bestel sneller met je bewaarde adresgegevens</li>
      <li>Al je bestellingen en retouren op één plek</li>   
      <br/>

      <a class="RegisterPageButton" asp-area="" asp-controller="Login" asp-action="Register">Account aanmaken</a>


     </div>
</div>