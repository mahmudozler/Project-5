@model MVC.ViewModels.BookmarkViewModel

@if(Model.Bookmarks.Count() > 0){
    @if(Model.productAmount > 0){
        <a class="btn btn-primary bookmark" asp-controller="Product" asp-action="RemoveBookmark" asp-route-productId="@Model.currentProduct">Bookmarked <span class="glyphicon glyphicon-heart"></span></a>
    }                   
} else {
    @if(Model.productAmount > 0){
        <a class="btn btn-primary bookmark" asp-controller="Product" asp-action="Bookmark" asp-route-productId="@Model.currentProduct">Add Bookmark <span class="glyphicon glyphicon-heart-empty"></span></a>
    }
}

