@model MVC.ViewModels.BookmarkViewModel

@if(Model.Bookmarks.Count() > 0){
    <a asp-controller="Product" asp-action="RemoveBookmark" asp-route-productId="@Model.currentProduct">Remove Bookmark</a>
} else {
    <a asp-controller="Product" asp-action="Bookmark" asp-route-productId="@Model.currentProduct">Bookmark</a>
}

