@model IEnumerable<MVC.Models.Product>

@{      
   ViewData["Title"] = "Home Page";       
}
<div class="container">
    <div class="col-lg-3 col-md-3">
        <ul class="categorie-items">
            <li><a href="/Product/?searchString=desktops">Desktops</a></li>
            <li><a href="/Product/?searchString=laptops">Laptops</a></li>
            <li><a href="/Product/?searchString=monitoren">Monitors</a></li>
            <li><a href="/Product/?searchString=muizen">Muizen</a></li>
            <li><a href="/Product/?searchString=toetsenborden">Toetsenborden</a></li>
            <li><a href="/Product/?searchString=printers">Printers</a></li>
          </ul>
    </div>

    <div class="col-lg-6 col-md-6 slider">
    	
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <img src="~/images/slider/slide-1.jpeg" alt="Los Angeles">
          </div>

          <div class="item">
            <img src="~/images/slider/slide-2.jpeg" alt="Chicago">
          </div>

          <div class="item">
            <img src="~/images/slider/slide-3.jpg" alt="New York">
          </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    	
    </div>

    <div class="col-lg-3 col-md-3">
    	<ul class="featureList">
            <li class = "tick" >Snelle levering</li>
