@model MVC.Models.Product

@{
    ViewData["Title"] = "Details";
}
<div class="container">
	<div class="product-edit">
		@if (this.User.IsInRole("Admin")){
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>}
        <a asp-action="Index">Terug naar lijst</a>
    </div>
	
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <hr />

	<div class="col-lg-7">
        <div class="product-image">
			<img height="380px" width="635px" id="detailimage" src="~/images/products/@Html.DisplayFor(model => model.Name) - 0000.jpg">
           
		</div>
        <script>
            function nextimage(){
                var a = document.getElementById("detailimage");
                a.src = "/images/products/@Html.DisplayFor(model => model.Name) - 0000.jpg";
            }
            function nextimage2(){
                var a = document.getElementById("detailimage");
                a.src = "/images/products/@Html.DisplayFor(model => model.Name) - 0001.jpg";
            }

            function nextimage3(){
                var a = document.getElementById("detailimage");
                a.src = "/images/products/@Html.DisplayFor(model => model.Name) - 0002.jpg";
            }
            function nextimage4(){
                var a = document.getElementById("detailimage");
                a.src = "/images/products/@Html.DisplayFor(model => model.Name) - 0003.jpg";
            }
            function nextimage5(){
                var a = document.getElementById("detailimage");
                a.src = "/images/products/@Html.DisplayFor(model => model.Name) - 0004.jpg";
            }

        </script>
	</div>
    
	<div class="col-lg-5">
		<div class="price-bar">
            
    		<h3>â‚¬ @Html.DisplayFor(model => model.Price)</h3>
			<!--<button class="btn kopen" >In winkelmandje</button>-->
            <a class="btn kopen" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-Id="@Model.Id">In winkelmandje  <span class="glyphicon glyphicon-shopping-cart"></span></a>
            
			<br/>
           <ul class="featureList">
            <li class = "tick" >Snelle levering</li>
            <li class = "tick" >Niet goed geld terug!</li>
            <li class = "tick" >Voor 17:00 besteld, morgen in huis!</li>
            <li class = "tick" >Tijdelijk 10% korting op alle producten</li>
            </ul>
           
		</div>
	</div>
    
    <dl class="dl-horizontal col-lg-7 product-info">
        <div>
        <style>
            .nisb1{
                background: url("/images/products/@Html.DisplayFor(model => model.Name) - 0000.jpg");
                background-size: 100% 100%;
                margin-right: 3%;}
            .nisb2{
                background: url("/images/products/@Html.DisplayFor(model => model.Name) - 0001.jpg");
                background-size: 100% 100%;
                margin-right: 3%;}
            .nisb3{
                background: url("/images/products/@Html.DisplayFor(model => model.Name) - 0002.jpg");
                background-size: 100% 100%;
                margin-right: 3%;}
            .nisb4{
                background: url("/images/products/@Html.DisplayFor(model => model.Name) - 0003.jpg");
                background-size: 100% 100%;
                margin-right: 3%;}
            .nisb5{
                background: url("/images/products/@Html.DisplayFor(model => model.Name) - 0004.jpg");
                background-size: 100% 100%;
                margin-right: 3%;}
            
        </style>
		<div class="nextimagestyle">
            <button class="nisb1" onclick="nextimage()">1</button>
            <button class="nisb2" onclick="nextimage2()">2</button>
            <button class="nisb3" onclick="nextimage3()">3</button>
            <button class="nisb4" onclick="nextimage4()">4</button>
            <button class="nisb5" onclick="nextimage5()">5</button>
        </div>
        
        <h3>Omschrijving @Html.DisplayFor(model => model.Name)</h3>
        <p>@Html.DisplayFor(model => model.Description)</p>

        <h3>Specificaties</h3>
        <dl>
            @foreach(var s in Model.Specifications){
                <dt>@s.Name</dt>
                <dd>@s.Value</dd>
            }
        </dl>

    </dl>
</div>


